								<div class="content-desc">
									@task.Description
								</div>
							</div>
						</div>

						<div class="alerts-content-inner">
							<div class="content-main">
								<div class="content-desc">
									<span>Created By: @task.CreatedByName</span>
									@if (task.DueDate.HasValue)
									{
										<span> | Due: @task.DueDate.Value.ToString("MMM dd, yyyy")</span>
